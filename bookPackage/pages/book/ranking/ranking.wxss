page {
  background: url('https://oss.lhdd.club/ui/rank-top.png') top center no-repeat;
  background-size: 100%;
}

.ranking-container {
  padding: 140rpx 32rpx 100rpx;
}

.main {
  border-radius: 4rpx;
  background: #FAF8F4;
  box-sizing: border-box;
  border: 1rpx solid #E1D5BD;
  padding: 36rpx 24rpx;
}

.tab-bar {
  display: flex;
  justify-content: center;
  align-items: center;
}

.tab-item {
  box-sizing: border-box;
  font-size: 24rpx;
  color: #373737;
  border: 1rpx solid #A4A4A4;
  max-width: 256rpx;
  width: 256rpx;
  height: 56rpx;
  text-align: center;
  line-height: 48rpx;
}

.tab-item:first-child {
  border-right: none;
}

.tab-item:last-child {
  border-left-color: #DA7C4A;
}

.tab-item.active {
  color: #DE7C4B;
  border-color: #DA7C4A;
  background: rgba(218, 120, 74, 0.1);
}

.top3 {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 344rpx;
  margin-top: 20rpx;
}

.top3 .top-item {
  position: relative;
  width: 196rpx;
  height: 304rpx;
  color: #FFFFFF;
  text-align: center;
  font-size: 40rpx;
  font-weight: 900;
  line-height: 44rpx;
  letter-spacing: 0.1em;
  background-size: 100%;
  background-position: bottom;
  background-repeat: no-repeat;
}

.top-item:nth-child(1) {
  order: 2;
  top: -40rpx;
  background-image: url('https://oss.lhdd.club/ui/top1.png');
}

.top-item:nth-child(2) {
  order: 1;
  background-image: url('https://oss.lhdd.club/ui/top2.png');
}

.top-item:nth-child(3) {
  order: 3;
  background-image: url('https://oss.lhdd.club/ui/top3.png');
}

.top3 .avatar {
  position: absolute;
  left: 50%;
  top: 0;
  margin-left: -60rpx;
  z-index: 2;
}

.top3 .t-avatar {
  width: 120rpx;
  height: 120rpx;
}

.top3 .text-box {
  position: absolute;
  top: 100rpx;
  font-size: 24rpx;
  width: 100%;
  z-index: 2;
}

.top3 .lv-num {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 40rpx;
}

.my-rank {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #F7EBE3;
  box-sizing: border-box;
  border: 1rpx solid #DA784A;
  padding: 24rpx;
  text-align: center;
  font-size: 24rpx;
  margin: 20rpx 0;
}

.my-rank .t-avatar {
  width: 72rpx;
  height: 72rpx;
}

.strong {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 44rpx;
  color: #DB7F50;
}

.my-rank .time {
  width: 324rpx;
}

.rank-list .row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  line-height: 44rpx;
  text-align: center;
  height: 60rpx;
  padding: 8rpx 0;
}

.rank-list .rank-list-header {
  height: 44rpx;
  color: #B3ABA0;
}

.rank-list .row .t-avatar {
  width: 60rpx;
  height: 60rpx;
}

.rank-list .row>text:first-child {
  width: 50rpx;
}

.rank-list .row>text:nth-child(2) {
  text-align: left;
  margin-left: 110rpx;
  flex: 1;
}

.rank-list .row>view:nth-child(2) {
  text-align: left;
  margin-left: 110rpx;
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.rank-list .row>text:last-child {
  width: 160rpx;
  text-align: right;
}

.rank-list .name {
  margin-left: 24rpx;
}