page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 110rpx);
  /* backdrop-filter: brightness(5%); */
}

.t-tabs.t-tabs--top .t-tabs__scroll {
  border-bottom: none !important;
}

.home-page-header {
  /* background: linear-gradient(#fff, #f5f5f5); */
  margin-bottom: 24rpx;
}

.home-page-container,
.home-page-header {
  display: block;
  padding: 0 24rpx;
}

.home-page-header .t-search__input-container {
  border-radius: 32rpx !important;
  height: 64rpx !important;
}

.home-page-header .t-search__input {
  font-size: 28rpx !important;
  color: rgb(116, 116, 116) !important;
}

.home-page-header .swiper-wrap {
  margin-top: 20rpx;
}

.home-page-header .t-image__swiper {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
}

.home-page-container .t-tabs {
  background: #f5f5f5 !important;
}

.home-page-container .t-tabs .t-tabs-nav {
  background-color: transparent;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.home-page-container .t-tabs .t-tabs-scroll {
  border: none !important;
}

/* 半个字 */
.home-page-container .tab.order-nav .order-nav-item.scroll-width {
  min-width: 165rpx;
}

.home-page-container .tab .order-nav-item.active {
  color: #fa550f !important;
}

.home-page-container .tab .bottom-line {
  border-radius: 4rpx;
}

.home-page-container .tab .order-nav-item.active .bottom-line {
  background-color: #fa550f !important;
}

.home-page-container .tabs-external__item {
  /* color: #666 !important; */
  font-size: 28rpx;
}

.home-page-container .tabs-external__active {
  color: #333333 !important;
  font-size: 32rpx;
}

.home-page-container .tabs-external__track {
  /* background-color: #fa4126 !important; */
  height: 6rpx !important;
  border-radius: 4rpx !important;
  width: 48rpx !important;
}

.t-tabs.t-tabs--top .t-tabs__item,
.t-tabs.t-tabs--bottom .t-tabs__item {
  height: 96rpx !important;
}

.home-page-container .goods-list-container {
  background: #f5f5f5 !important;
  margin-top: 16rpx;
}

.nav-icon .t-badge {
  border-radius: 100rpx;
  border: 2px solid var(--td-brand-color);
}

.nav-icon image {
  width: 48rpx !important;
  height: 48rpx !important;
  margin: 16rpx;
  filter: invert(42%) sepia(64%) saturate(345%) hue-rotate(348deg) brightness(90%) contrast(86%);
}

.nav-icon .t-grid-item__text {
  font-size: 26rpx;
}

.home-page-tabs {
  --td-tab-nav-bg-color: transparent;
  --td-tab-border-color: transparent;
  --td-tab-item-color: #666;
  --td-tab-track-color: red;
}

/* 新轮播 */
.card-theme {
  --td-swiper-radius: 0;
  --td-swiper-item-padding: 0 12rpx;
  --td-swiper-nav-dot-color: var(--td-bg-color-component, #e7e7e7);
  --td-swiper-nav-dot-active-color: var(--td-brand-color, #0052d9);
}

.card-theme .card-theme-infos {
  position: relative;
  display: block;
  line-height: 1.5;
}

.card-theme .card-theme-infos .mound {
  top: 0;
  right: 24rpx;
  position: absolute;
  overflow: hidden;
  box-sizing: border-box;
  width: 54rpx;
  height: 108rpx;
  line-height: 1.2;
  font-size: 24rpx;
  color: white;
  letter-spacing: 12rpx;
  padding-top: 8rpx;
  padding-left: 16rpx;
  background: url(http://oss.lhdd.club/ui/ui_plate.png) center/cover no-repeat;
}

.card-theme .card-theme-infos .avatar {
  border-radius: 8rpx;
}

.card-theme .card-theme-infos .name {
  font-size: 32rpx;
}

.card-theme .card-theme-infos .gender text {
  margin: 0 16rpx;
  color: #c0975a;
}

.card-theme .card-theme-infos .region {
  font-size: 24rpx;
}

.card-theme .card-theme-orgs {
  line-height: 1.75;
}

.card-theme .card-theme-orgs liner {
  width: auto;
}

.card-theme .card-theme-orgs .org {
  color: #c0975a;
  margin-bottom: 8rpx;
}

.card-theme .card-theme-orgs .region {
  font-size: 24rpx;
  color: #444;
}

.card-theme .card-theme-entry .t-col {
  position: relative;
  margin-bottom: 32rpx;
}

.card-theme .card-theme-entry .name {
  top: 12rpx;
  left: 32rpx;
  position: absolute;
  font-weight: bold;
}

.card-theme .card-theme-entry .subname {
  top: 52rpx;
  left: 32rpx;
  position: absolute;
  font-size: 24rpx;
  color: #926523;
}

/* tab */
.card-theme .card-theme-nav {
  bottom: -18px;
}

.scale-candidate {
  height: 800rpx !important;
}

.custom-tabs {
  background-color: transparent !important;
}

.custom-panel {
  /* margin-top: 80rpx; */
  margin-top: 32rpx;
}

.custom-track {
  /* left: -42rpx !important; */
  width: 108rpx !important;
}

.scale-card-theme image {
  max-width: 100%;
}

.course-card {
  margin-bottom: 40rpx;
}

.course-card .t-image {
  border-radius: 12rpx;
}

.auth-group {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.auth-card {
  width: calc(50vw - 48rpx);
  margin-bottom: 32rpx;
  padding: 1rem;
  background: #fff;
  box-sizing: border-box;
  border-radius: 8rpx;
}

.auth-card-title {
  font-size: 28rpx;
}

.lesson-poster {
  margin-bottom: 24rpx;
}

.lesson-title,
.lesson-content text {
  font-size: 24rpx;
}

.lesson-content text {
  margin-right: 12rpx;
}

.lesson-name {
  color: #c0975a;
}