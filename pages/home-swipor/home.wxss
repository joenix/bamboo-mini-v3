page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 90rpx);
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.t-tabs.t-tabs--top .t-tabs__scroll {
  border-bottom: none !important;
}

.home-page-header {
  margin-bottom: 24rpx;
}

.home-page-container,
.home-page-header {
  display: block;
  padding: 0 24rpx;
}

.home-page-header .t-search__input-container {
  border-radius: 32rpx !important;
  height: 64rpx !important;
}

.home-page-header .t-search__input {
  font-size: 28rpx !important;
  color: rgb(116, 116, 116) !important;
}

.home-page-header .swiper-wrap {
  margin-top: 20rpx;
}

.home-page-header .t-image__swiper {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
}

/* .home-page-container .t-tabs {
  background: #f5f5f5 !important;
} */

.home-page-container .t-tabs .t-tabs-nav {
  background-color: transparent;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.home-page-container .t-tabs .t-tabs-scroll {
  border: none !important;
}

/* 半个字 */
.home-page-container .tab.order-nav .order-nav-item.scroll-width {
  min-width: 165rpx;
}

.home-page-container .tab .order-nav-item.active {
  color: #fa550f !important;
}

.home-page-container .tab .bottom-line {
  border-radius: 4rpx;
}

.home-page-container .tab .order-nav-item.active .bottom-line {
  background-color: #fa550f !important;
}

.home-page-container .tabs-external__item {
  /* color: #666 !important; */
  font-size: 28rpx;
}

.home-page-container .tabs-external__active {
  color: #333333 !important;
  font-size: 32rpx;
}

.home-page-container .tabs-external__track {
  /* background-color: #fa4126 !important; */
  height: 6rpx !important;
  border-radius: 4rpx !important;
  width: 48rpx !important;
}

.t-tabs.t-tabs--top .t-tabs__item,
.t-tabs.t-tabs--bottom .t-tabs__item {
  height: 86rpx !important;
}

.home-page-container .goods-list-container {
  background: #f5f5f5 !important;
  margin-top: 16rpx;
}

.nav-icon .t-badge {
  border-radius: 100rpx;
  border: 2px solid var(--td-brand-color);
}

.nav-icon image {
  width: 48rpx !important;
  height: 48rpx !important;
  margin: 16rpx;
  filter: invert(42%) sepia(64%) saturate(345%) hue-rotate(348deg) brightness(90%) contrast(86%);
}

.nav-icon .t-grid-item__text {
  font-size: 26rpx;
}

.home-page-tabs {
  --td-tab-nav-bg-color: transparent;
  --td-tab-border-color: transparent;
  --td-tab-item-color: #666;
  --td-tab-track-color: red;
}

/* 最新咨询 */
.news-container .news-header {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  line-height: 90rpx;
}

.news-header-title {
  font-weight: bold;
}

.news-header-more {
  color: #bbb;
}

/* 关注弹窗 */
.followModal-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgb(0, 0, 0, 0.4);
}

.followModal-container .followModal {
  width: 90%;
  margin-left: 5%;
  margin-top: 200rpx;
  border-radius: 10px;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 40rpx;
}

.followModal .title {
  line-height: 100rpx;
}

.followModal .description {
  margin-bottom: 30rpx;
}

.followModal .qrcode {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 30rpx;
}

.followModal .tips {
  font-size: 24rpx;
}

/* 新轮播 */
.card-theme {
  --td-swiper-radius: 0;
  --td-swiper-item-padding: 0 12rpx;
  --td-swiper-nav-dot-color: var(--td-bg-color-component, #e7e7e7);
  --td-swiper-nav-dot-active-color: var(--td-brand-color, #0052d9);

  padding-bottom: 18px;
}

/* tab */
.card-theme .card-theme-nav {
  bottom: -18px;
}

.scale-candidate {
  height: 800rpx !important;
}

.home-tabs {
  background: #FBF7F8 !important;
  flex: 1 !important;
}

.home-tabs .t-tabs__scroll--split::after {
  background-color: transparent;
}

.home-panel {
  margin-top: 80rpx;
}


/* 自定义swiper */
.swiper-container {
  width: 100vw;
  overflow: hidden;
}

.swiper-container .swiper-panel-container {
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  width: fit-content;
  transition: all ease-out 0.4s;
  height: 1000rpx;
}

.swiper-container .swiper-list-container {
  box-sizing: border-box;
  position: relative;
  height: 800rpx;
  margin-left: 30rpx;
  width: 600rpx;
  border-radius: 10rpx;
  overflow: hidden;
  transition: height ease-in 0.15s;
}

.swiper-list-container .swiper-item {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.swiper-container .active {
  height: 1000rpx;
}

.swiper-container .back-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
  /* opacity: 0; */
}

.swiper-container .showback {
  opacity: 1;
}

.swiper-container .back-container .back-item {
  height: 100%;
  width: 100%;
  border-radius: 10rpx;
}

.swiper-container .back-container .back-template {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
  box-sizing: border-box;
  padding-bottom: 10rpx;
  background-color: #fff;
}

.back-template .header {
  min-height: 200rpx;
  max-height: 260rpx;
  border-radius: 10rpx 10rpx 0 0;
}

.back-template .pagetitle,
.back-template .footer-container {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  position: relative;
  margin-top: 30rpx;
}

.back-template .pagetitle text {
  background: #D6AD54;
  color: #fff;
  padding: 10rpx 36rpx;
  border-radius: 30rpx;
}

.back-template .des-container,
.back-template .content-container {
  display: flex;
  flex-direction: column;
  width: 80%;
}

.back-template .des-container {
  margin-top: 24rpx;
  align-items: center;
}

.back-template .des-container .des {
  color: #7A7B7E;
  text-indent: 56rpx;
}

.back-template .des-container .author {
  align-self: flex-end;
  margin-top: 15rpx;
  color: #BFC0C1;
  font-size: 22rpx;
}

.back-template .content-container {
  margin-top: 30rpx;
  align-items: flex-start;

}

.back-template .content-container .title {
  font-size: 26rpx;
  font-weight: bold
}

.back-template .content-container .theme {
  font-size: 26rpx
}

.back-template .content-container .content {
  margin-top: 10rpx;
  letter-spacing: 3rpx;
  font-size: 24rpx;
}

.back-template .content-container .content .explain {
  color: #7A7B7E;
  text-indent: 56rpx;
  font-size: 22rpx;
  margin-top: 10rpx;
}