<!-- 自定义nav -->
<custom-nav title="更新资料" />

<t-message id="t-message" />

<pager>
    <blocker>
        <t-input value="{{userInfo.leftEyes}}" label="左眼视力" t-class-prefix-icon="info-icon info-left" placeholder="请输入左眼视力" align="right" data-name="leftEyes" bind:change="onInput" />
        <t-input value="{{userInfo.rightEyes}}" label="右眼视力" t-class-prefix-icon="info-icon info-right" placeholder="请输入右眼视力" align="right" data-name="rightEyes" bind:change="onInput" />
        <t-input value="{{userInfo.height}}" label="身高" suffix="CM" t-class-prefix-icon="info-icon info-height" placeholder="请输入身高" align="right" data-name="height" bind:change="onInput" />
        <t-input value="{{userInfo.weight}}" label="体重" suffix="KG" t-class-prefix-icon="info-icon info-weight" placeholder="请输入体重" align="right" data-name="weight" bind:change="onInput" />
    </blocker>

    <btn bind:tap="update">立即更新</btn>
</pager>