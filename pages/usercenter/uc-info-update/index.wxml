<!-- 自定义nav -->
<custom-nav title="更新资料" />

<t-message id="t-message" />

<pager>
    <blocker>
        <t-input value="{{userInfo.leftEyes}}" label="左眼视力" prefix-icon="browse" t-class-prefix-icon="info-icon" placeholder="请输入左眼视力" align="right" />
        <t-input value="{{userInfo.rightEyes}}" label="右眼视力" prefix-icon="browse" t-class-prefix-icon="info-icon" placeholder="请输入右眼视力" align="right" />
        <t-input value="{{userInfo.height}}" label="身高" suffix="CM" prefix-icon="map-ruler" t-class-prefix-icon="info-icon" placeholder="请输入身高" align="right" />
        <t-input value="{{userInfo.weight}}" label="体重" suffix="KG" prefix-icon="upscale" t-class-prefix-icon="info-icon" placeholder="请输入体重" align="right" />
    </blocker>

    <btn bind:tap="update">立即更新</btn>
</pager>