page {
  background: linear-gradient(to bottom, #ddd4c3, #f7f6f2);
  background-repeat: no-repeat;
}

.page-tips {
  /* background-color: red; */
}

.page-tips-info {
  display: flex;
  flex-direction: column;
  padding-bottom: 66rpx;
}

.tips-container {
}

.tips-container .title {
  padding-left: 30rpx;
}

.t-cell-group {
  padding: 24rpx 0;
}

.tip-cell {
  margin-bottom: 20rpx;
}

.t-indexes-anchor__wrapper {
  display: none;
}

.t-indexes__sidebar {
  margin: 36rpx 0 0;
  width: 100% !important;
  flex-direction: inherit !important;
  justify-content: center;
  position: static !important;
}

.t-indexes__sidebar-item {
  padding: 20rpx 36rpx;
  border: 2rpx solid #9f9f9f;
  border-radius: 0 !important;
}

.t-indexes__sidebar-item + .t-indexes__sidebar-item {
  margin-top: 0 !important;
}

.t-indexes__sidebar-item--active {
  background-color: transparent !important;
  border-color: #926523 !important;
}

.t-indexes-anchor__header {
}

.page-tip-block,
.page-tip-first {
}

.page-tip-block {
  position: relative;
  padding: 24rpx;
  margin-top: 48rpx;
  border: 2rpx solid #e1d5bd;
  background-color: #fcfbf7;
  border-radius: 4rpx;
}

.page-tip-first,
.page-tip-first-in {
  position: relative;
  background-color: #fcfbf7;
  border-radius: 12rpx;
}

.page-tip-first {
  height: 340rpx;
  padding: 0 16rpx;
  margin-top: 24rpx;
  margin-bottom: 18rpx;
  border: 2rpx solid #e4c79c;
}

.page-tip-first-in {
  top: -24rpx;
  height: calc(340rpx + 40rpx);
  border: 2rpx solid #e4c79c;
}

.page-tip-first-in::after,
.page-tip-first-in::before {
  content: ' ';
  top: 22rpx;
  bottom: 18rpx;
  position: absolute;
  width: 2rpx;
  background-color: #fcfbf7;
}

.page-tip-first-in::after {
  left: -2rpx;
}

.page-tip-first-in::before {
  right: -2rpx;
}

.page-tip-content {
  padding-left: 168rpx;
  background: url(https://oss.lhdd.club/ui/ui_tip_first.png) -32rpx center/contain no-repeat;
}

.tip-tip,
.tip-tip-in {
  position: relative;
  color: #fff;
  background-color: #926523;
}

.tip-tip {
  z-index: 2;
  top: 32rpx;
  width: 140rpx;
  height: 60rpx;
  left: -32rpx;
}

.tip-tip-in {
  text-align: center;
  width: 148rpx;
  height: 48rpx;
  line-height: 48rpx;
  top: 6rpx;
}

.tip-tip-ar {
  z-index: 0;
  position: absolute;
  top: 100%;
  left: 0;

  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-top: 12rpx solid #926523; /* 顶部的颜色会形成倒三角 */
  overflow: hidden; /* 隐藏另一半 */
}

.tip-date {
  line-height: 64rpx;
  color: #926523;
  background: url(https://oss.lhdd.club/ui/ui_line_linear.png) bottom/contain no-repeat;
}

.tip-control {
  top: 24rpx;
  right: 24rpx;
  position: absolute;
  color: #d6a357;
}

.page-tip-header .tip-date {
  position: relative;
  top: -30rpx;
  margin-left: 136rpx;
}

.page-tip-block .tip-date {
  margin-bottom: 24rpx;
}
