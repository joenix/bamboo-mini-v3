/* pages/book/book.wxss */
page {
  background: linear-gradient(180deg, #E0D4BB 0%, rgba(224, 212, 187, 0) 484rpx, #F9F8F6 100%) no-repeat;
}

.is-holiday:not(.t-calendar__dates-item--selected) {
  color: #e34d59 !important;
}

.is-readed {
  position: relative;
}

.is-readed::after {
  content: ' ';
  top: 18rpx;
  right: 12rpx;
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  border-radius: 24rpx;
  background-color: #e34d59;
}

.last-day {
  background-color: #ccc;
}

.t-calendar__months {
  height: 40vh !important;
}

.t-calendar__title {
  display: none !important;
}

.t-calendar__dates-item {
  height: 98rpx !important;
  margin-top: 4rpx !important;
}

.book-container {
  padding: 0 30rpx;
}

.calendar-container .calendar-title {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 80rpx;
}

.book-calendar-header {
  position: relative;
  display: flex;
  align-items: center;
  height: 116rpx;
  padding-left: 12rpx;
  border-radius: 8rpx 8rpx 0 0;
  background:
    #926523 url(https://oss.lhdd.club/ui/ui_calendar.png) right 68rpx top no-repeat;
  background-size: 332rpx 124rpx;
}

.book-calendar-header::after {
  content: ' ';
  position: absolute;
  height: 12rpx;
  top: -12rpx;
  left: 0;
  right: 0;
  margin: 0 12rpx;
  background: #926523;
  border-radius: 8rpx 8rpx 0 0;
}

.book-calendar-header text {
  width: 68rpx;
  height: 68rpx;
  margin-left: 16rpx;
  line-height: 64rpx;
  display: block;
  text-align: center;
  border-radius: 64rpx;
  color: #fff;
  border: 2rpx solid #fff;
}

.book-calendar-content {
  border: 2rpx solid #926523;
}

.book-entries {
  margin-top: 24rpx;
}

.book-entries-block {
  background: #fff url(https://oss.lhdd.club/ui/book-entries-3.png) right top no-repeat;
  background-size: 400rpx 164rpx;
  border: 1px solid #CBBA9F;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.book-entries-title {
  font-size: 32rpx;
  margin-bottom: 16rpx;
}

.book-entries-text,
.book-entries-button {
  color: #926523;
  font-size: 24rpx;
}

.book-entries-text {
  height: 48rpx;
  overflow: hidden;
}

.book-entries-text text {
  font-size: 24rpx;
  margin: 0 0.25rem;
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 40rpx;
  text-align: center;
  border: 2rpx solid #eb866a;
}

.book-entries-button {
  text-align: right;
}

.book-entries-button text {
  color: #926523;
  vertical-align: middle;
  font-size: 12rpx;
}

.book-entries-flex {
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.book-entries-total {
  font-size: 24rpx;
  color: #B3ABA0;
}

.book-entries-affix {
  font-size: 24rpx;
  color: #926523;
}

.book-entries-total text,
.book-entries-affix text {
  font-size: 24rpx;
  color: #926523;
}

.book-entries-affix {
  font-size: 20rpx;
}

.book-entries-affix>text {
  display: inline-block;
  padding: 0 8rpx;
  border-radius: 48rpx;
  color: #fff;
  background-color: #8b682d;
}

.book-entries-button-large {
  color: #926523;
  margin-top: 16rpx;
  padding: 8rpx 0;
  text-align: center;
  border: 2rpx solid #926523;
}

.book-entries-button-large text {
  font-size: 16rpx;
  vertical-align: middle;
}