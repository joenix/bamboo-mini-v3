page {
  background:
    linear-gradient(180deg, #FF945F 0px, #57331d00 408rpx) no-repeat,
    linear-gradient(180deg, #FF945F 0px, #FF945F 524rpx, #FFF 524rpx, #FFF 100%) no-repeat;
}

.ranking-container {
  padding: 0 32rpx 100rpx;
}

.header {
  color: #FAF8F4;
  font-size: 24rpx;
  line-height: 32rpx;
  margin-bottom: 24rpx;
}

.header-line-1 {
  font-size: 36rpx;
  font-weight: 900;
  line-height: 44rpx;
}

.main {
  border-radius: 4rpx;
  background: #FAF8F4;
  box-sizing: border-box;
  border: 1rpx solid #E1D5BD;
  padding: 36rpx 24rpx;
}

.tab-bar {
  display: flex;
  justify-content: center;
  align-items: center;
}

.tab-item {
  box-sizing: border-box;
  font-size: 24rpx;
  color: #373737;
  border: 1rpx solid #A4A4A4;
  max-width: 256rpx;
  width: 256rpx;
  height: 56rpx;
  text-align: center;
  line-height: 48rpx;
}

.tab-item:first-child {
  border-right: none;
}

.tab-item:last-child {
  border-left-color: #DA7C4A;
}

.tab-item.active {
  color: #DE7C4B;
  border-color: #DA7C4A;
  background: rgba(218, 120, 74, 0.1);
}

.top3 {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 344rpx;
  margin-top: 20rpx;
}

.top3 .top-item {
  position: relative;
  width: 196rpx;
  height: 304rpx;
  color: #FFFFFF;
  text-align: center;
  font-size: 40rpx;
  font-weight: 900;
  line-height: 44rpx;
  letter-spacing: 0.1em;
}

.top-item:nth-child(1) {
  order: 2;
  top: -40rpx;
}

.top-item:nth-child(2) {
  order: 1;
}

.top-item:nth-child(3) {
  order: 3;
}

.top3 .avatar {
  position: absolute;
  left: 50%;
  top: 0;
  margin-left: -62rpx;
  z-index: 2;
}

.top3 .t-avatar {
  width: 134rpx;
  height: 134rpx;
}

.top3 .text-box {
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  left: 0;
  top: 100rpx;
  font-size: 24rpx;
  width: 100%;
  z-index: 2;
}

.top3 .lv-num {
  width: 56rpx;
  height: 56rpx;
  background: #FFFFFF;
  border: 1px solid #94C8C4;
  border-radius: 50%;
  font-size: 20rpx;
  line-height: 56rpx;
  text-align: center;
  font-weight: 1000;
}

.top3 .top-num {
  font-size: 40rpx;
  font-weight: 900;
  line-height: 44rpx;
  letter-spacing: 0.1em;
  margin-top: 8rpx;
}

.top3 .bg {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 236rpx;
  z-index: 0;
}

.my-rank {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #F7EBE3;
  box-sizing: border-box;
  border: 1rpx solid #DA784A;
  padding: 24rpx;
  text-align: center;
  font-size: 24rpx;
  margin: 20rpx 0;
}

.my-rank .t-avatar {
  width: 72rpx;
  height: 72rpx;
}

.strong {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 44rpx;
  color: #DB7F50;
}

.my-rank .time {
  width: 324rpx;
}

.rank-list .row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  line-height: 44rpx;
  text-align: center;
}

.rank-list .row .t-avatar {
  width: 60rpx;
  height: 60rpx;
}

.rank-list .row text:last-child {
  width: 320rpx;
  text-align: right;
}

.rank-list .rank-list-header {
  height: 44rpx;
  color: #B3ABA0;
}

.rank-list .row {
  height: 60rpx;
  padding: 8rpx 0;
}

.rank-list .name {
  margin-left: 24rpx;
  vertical-align: middle;
}