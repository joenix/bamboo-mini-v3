page {
  background:
    linear-gradient(180deg, #FF945F 0px, #57331d00 204px) no-repeat,
    linear-gradient(180deg, #FF945F 0px, #FF945F 263px, #FFF 264px, #FFF 100%) no-repeat;
  height: 100vh;
}

.ranking-container {
  padding: 0 16px;
}

.header {
  color: #FAF8F4;
  font-size: 12px;
  line-height: 16px;
  margin-bottom: 12px;
}

.header-line-1 {
  font-size: 18px;
  font-weight: 900;
  line-height: 22px;
}

.main {
  border-radius: 2px;
  opacity: 1;
  background: #FAF8F4;
  box-sizing: border-box;
  border: 1px solid #E1D5BD;
  padding: 18px 12px;
}

.tab-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 50px;
}

.tab-item {
  box-sizing: border-box;
  font-size: 12px;
  color: #373737;
  border: 1px solid #A4A4A4;
  max-width: 128px;
  width: 128px;
  height: 28px;
  text-align: center;
  line-height: 24px;
}

.tab-item:first-child {
  border-right: none;
}

.tab-item:last-child {
  border-left-color: #DA7C4A;
}

.tab-item.active {
  color: #DE7C4B;
  border-color: #DA7C4A;
  background: rgba(218, 120, 74, 0.1);
}

.top3 {
  display: flex;
  justify-content: space-between;
}

.top3 .top-item {
  position: relative;
  width: 98px;
  height: 150px;
  color: #FFFFFF;
  text-align: center;
  font-size: 20px;
  font-weight: 900;
  line-height: 22px;
  letter-spacing: 0.1em;
}

.top-item:nth-child(1) {
  order: 2;
  top: -40px;
}

.top-item:nth-child(2) {
  order: 1;
}

.top-item:nth-child(3) {
  order: 3;
}

.top3 .avatar {
  position: absolute;
  left: 50%;
  top: 0;
  margin-left: -31px;
  z-index: 2;
}

.top3 .t-avatar {
  width: 62px;
  height: 62px;
}

.top3 .text-box {
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  left: 0;
  top: 50px;
  font-size: 12px;
  width: 100%;
  z-index: 2;
}

.top3 .lv-num {
  width: 28px;
  height: 28px;
  background: #FFFFFF;
  border: 1px solid #94C8C4;
  border-radius: 50%;
  font-size: 10px;
  line-height: 28px;
  text-align: center;
  font-weight: 1000;
}

.top3 .top-num {
  font-size: 20px;
  font-weight: 900;
  line-height: 22px;
  letter-spacing: 0.1em;
}

.top3 .bg {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 118px;
  z-index: 0;
}

.my-rank {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #F7EBE3;
  box-sizing: border-box;
  border: 1px solid #DA784A;
  padding: 12px;
  text-align: center;
  font-size: 12px;
  margin: 10px 0;
}

.my-rank .t-avatar {
  width: 36px;
  height: 36px;
}

.strong {
  font-size: 16px;
  font-weight: 600;
  line-height: 22px;
  color: #DB7F50;
}

.my-rank .time {
  width: 162px;
}

.rank-list .row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
  line-height: 22px;
  text-align: center;
}

.rank-list .row .t-avatar {
  width: 30px;
  height: 30px;
}

.rank-list .row text:last-child {
  width: 160px;
  text-align: right;
}

.rank-list .rank-list-header {
  height: 22px;
  color: #B3ABA0;
}

.rank-list .row {
  height: 30px;
  padding: 4px 0;
}

.rank-list .name {
  margin-left: 12px;
  vertical-align: middle;
}