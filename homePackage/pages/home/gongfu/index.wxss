/* homePackage/pages/home/gongfu/index.wxss */
.item {
  display: flex;
  gap: 16rpx;
  padding: 20rpx;
  border-radius: 4rpx;
  background: #FFFFFF;
  box-shadow: 0px 2px 10px 0px rgba(194, 185, 172, 0.2);
  margin-bottom: 20rpx;
}

.right {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  justify-content: space-between;
}


.item-title {
  font-size: 24rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.item-content text {
  margin-right: 12rpx;
  color: #A1A1A1;
  font-size: 20rpx;
}

.item-content .item-name {
  color: #c0975a;
  font-size: 24rpx;
}