<!--homePackage/pages/home/case/index.wxml-->
<custom-nav title="成果案例" />
<pager>
  <t-row gutter="16">
    <t-col span="12" wx:for="{{list}}" wx:key="index" data-item="{{item}}" data-index="{{index}}" data-id="{{item.id}}" bind:tap="link_detail">
      <view class="item">
        <t-image class="item-poster" src="{{item.img[0].link}}" mode="aspectFill" width="100%" height="100" />
        <content count="{{1}}" class="item-title">{{item.name}}</content>
      </view>
    </t-col>
  </t-row>
</pager>