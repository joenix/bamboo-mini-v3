/* pages/usercenter/suggest/suggest.wxss */
page {
  height: 100vh;
  /* background: #f9f8f6; */
}

ec-canvas {
  width: 100vw;
  height: 800rpx;
}

.flex {
  display: flex;
}

.align-center {
  align-items: center;
}

.truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container {
  padding: 0 30rpx;
}

.list-item {
  margin-bottom: 20rpx;
  padding: 20rpx 32rpx;
  border-bottom: 1px solid #f5f5f5;
}

.list-item:last-child {
  margin-bottom: 0;
  border-bottom: none;
}

.list-item-footer {
  margin-top: 20rpx;
  color: #999;
}

.base-info {
  margin-left: 12rpx;
  line-height: 48rpx;
}

.line {
  margin: 0 20rpx;
  color: #f5f5f5;
}

.other {
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.other-item {
  flex: 1;
  max-width: 50%;
  min-width: 50%;
  font-size: 28rpx;
  line-height: 48rpx;
}

.other-item .label {
  color: #888;
  margin-right: 8rpx;
}