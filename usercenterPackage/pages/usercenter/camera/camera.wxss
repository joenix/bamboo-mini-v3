/* usercenterPackage/pages/usercenter/camera/camera.wxss */
page {
  height: 100vh;
  background: #000;
}

.body {
  box-sizing: border-box;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-bottom: 200rpx;
}

.camera-box {
  position: relative;
}

.img {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 280px;
  transform: translate3d(-50%, -50%, 0);
}

.btn-area {
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #FFF;
}

.take-button {
  width: 100rpx;
  height: 100rpx;
  padding: 8rpx;
  border: 1px solid #fff;
  border-radius: 50%;
}

.take-button-inner {
  content: '';
  width: 100%;
  height: 100%;
  background: #fff;
  border-radius: 50%;
}

.switch-btn {
  position: absolute;
  right: 30rpx;
  font-size: 24rpx;
}