page {
  height: 100vh;
  background: linear-gradient(180deg, #E0D4BB 0%, rgba(224, 212, 187, 0) 484rpx, #F9F8F6 100%) no-repeat;
  overflow-y: auto;
}

.blocker {
  padding: 48rpx 32rpx !important;
  background: #FFF;
  border-radius: 4rpx;
  margin: 48rpx 0;
}

.image-box {
  margin: 0 auto 40rpx;
  text-align: center;
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  padding: 0;
  border: 1px solid #EBE4DD;
}

.t-input {
  padding: 24rpx 0 !important;
  border-bottom: 1rpx solid #EBE4DD;
}

.t-input__control {
  color: rgba(0, 0, 0, 0.8) !important;
}

.t-input__icon--prefix {
  display: flex;
  align-items: center;
}

.prefix-icon {
  width: 40rpx;
  height: 40rpx;
}

.t-input__label {
  font-size: 28rpx !important;
  font-weight: 500;
  line-height: 40rpx;
  color: rgba(0, 0, 0, 0.8) !important;
}

.input-placeholder {
  color: #D8D8D8 !important;
  font-size: 28rpx !important;
}

.custom-label::before {
  content: '*';
  color: red;
  font-size: 24rpx;
  margin-right: 4rpx;
}

.time {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.65);
}