page {
  height: 100vh;
  background: linear-gradient(180deg, #E0D4BB 0%, rgba(224, 212, 187, 0) 484rpx, #F9F8F6 100%) no-repeat;
  overflow-y: auto;
}

.blocker {
  padding: 48rpx 32rpx !important;
  background: #FFF;
  border-radius: 4rpx;
  margin: 48rpx 0;
}

.image-box {
  margin: 0 auto 40rpx;
  text-align: center;
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  padding: 0;
  border-width: 0px;
  outline: none;
}

.input {
  border-bottom: 1px solid #EBE4DD;
  padding: 24rpx 0;
}

.input-placeholder {
  color: #D8D8D8 !important;
  font-size: 28rpx !important;
}