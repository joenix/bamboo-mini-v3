.swipor-container {
  width: 100%;
  height: 65vh;
}

.swipor {
  height: 100%;

  display: flex;
  flex: 0 0 1;
}

.swipor-item {
  /* box-sizing: border-box; */
  box-sizing: content-box;

  height: 56vh !important;
  margin-top: 4vh;

  overflow-x: hidden;
  overflow-y: auto;

  transition: all ease-out 0.24s;
}

.swipor-container .active {
  height: 64vh !important;
  margin-top: 0 !important;
}

.swipor-item-content {
  height: 100%;
  margin: 0 auto;
  background-color: white;
  border-radius: 10rpx;
  overflow: hidden;
}

.swipor-container .active .swipor-item-content {
  width: 80vw !important;
}

.swipor-context {
  padding: 40rpx;
  line-height: 2;
  text-align: justify;
}

.swipor-title {
  font-weight: bold;
  font-size: 32rpx;
  line-height: 3;
}

